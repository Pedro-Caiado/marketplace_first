<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Status</th>
      <th>Value</th>
      <th>Finished_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.id %></td>
        <td><%= cart.status %></td>
        <% if cart.finished? %>
          <td>$ <%= cart.value %></td>
          <td><%= cart.updated_at %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', cart %></td>
      </tr>
    <% end %>
  </tbody>
</table>
